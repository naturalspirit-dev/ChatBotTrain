
/*
 * Lists all database in your installation.
 */
.arguments
   database:string


/*
 * Ensures user is authorized to access endpoint.
 */
auth.verify-ticket:root


/*
 * Invokes slot responsible for returning our database names,
 * and returns results to caller.
 */
signal:magic.db.mysql.connection
   database:sys
unwrap:x:+/*
signal:magic.db.mysql.tables
   connection:x:./-/-
   database:x:@.arguments/*/database

return-nodes:x:-/*
