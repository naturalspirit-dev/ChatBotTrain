// Endpoint returning a file to caller with authentication | Returns content of the /README.md file to caller to root users
.arguments

// Ensuring user belongs to root role
auth.ticket.verify:root

// Loading file
io.file.load:/README.md

// Changing Content-Type to plain text
response.headers.set
   Content-Type:text/plain
   
// Returning content of file to caller.
return:x:@io.file.load
