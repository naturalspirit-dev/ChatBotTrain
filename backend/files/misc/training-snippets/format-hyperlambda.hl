// Format all Hyperlambda in the module named sakila
.folder:/modules/sakila/
io.file.list-recursively:x:-
for-each:x:-/*
   if
      strings.ends-with:x:@.dp/#
         .:.hl
      .lambda
         io.file.load:x:@.dp/#
         hyper2lambda:x:-
            comments:true
         lambda2hyper:x:-/*
            comments:true
         io.file.save:x:@.dp/#
            get-value:x:@lambda2hyper
